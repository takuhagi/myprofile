.container
  .jumbotron.jumbotron-fruid.p-4
    -# 戻るボタン
    .col.text-right.mb-3
      = link_to '戻る', 'javascript:history.back()'
    %h1.display-4
      = @event_profile.title
    - if @event_profile.start.present? || @event_profile.end.present?
      %p.lead.mt-3
        = "#{@event_profile.start.strftime("%Y-%m-%d %H:%M (%a)")} - #{@event_profile.end.strftime("%Y-%m-%d %H:%M (%a)")}"
    .mt-4
      = "投稿者：#{@event_profile.user.nickname}"
    %div
      = "最終更新：#{time_ago_in_words(@event_profile.updated_at)}前"
    - if current_user.id == @event_profile.user_id
      = link_to("編集する", edit_event_profile_path, { class: "btn btn-primary mt-4" })
      -# = link_to "削除する", event_profile_path(@event_profile.id), class: "btn btn-primary mt-4", method: :delete
      = link_to "削除する", event_profile_path(@event_profile.id), class: "btn btn-primary mt-4", method: :delete, data: {confirm: "本当に削除しますか？"}
    = link_to("投稿者のプロフィール", users_path(id: @event_profile.user.id), { class: "btn btn-info mt-4" })
    -# %p.text-muted.mb-2.mt-4 The description of the event is as follows.
    %p.lead.mt-4
      = @event_profile.explanation
    %hr.my-4/
    - if @event_profile.image.present?
      = image_tag(@event_profile.image.url, alt: "メイン写真", class: "img-fruid", style: "width: 100%; height: auto;")
    - else
      %img.card-img-top{alt: "...", src: "/assets/no_image.png"}/