.container.mt-3.mb-5.col-md-12.d-flex.align-items-center.text-center
  


.Header.mt-3.mb-5.d-flex.align-items-center.text-center
  .Header__title.d-flex.align-items-center
    %h1 MyProfile
    %h5 
    = link_to "トップページに戻る", :back, class: 'Button'


.AccountPage.mt-3.mb-5.col-md-12.text-center
  .AccountPage__title.d-flex.align-items-center.text-center
    %h2 Log in
    %h5 登録しているユーザーでログイン
    = render "devise/shared/links"
  .AccountPage__form.col-md-12.mt-3.mb-5.d-flex.align-items-center.text-center
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "Log in", class: 'Button UserButton'

.Footer.mt-3.mb-4.col-md-12.d-flex.align-items-center.text-center
  .Copyright
    %h4  Copyright © 2020 MyProfile, All Rights Reserved.
 