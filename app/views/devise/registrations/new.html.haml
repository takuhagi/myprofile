.Header
  .Header__title
    %h1 MyProfile
    

.container.align-items-center.text-center.mt-5.mb-5
  .AccountPage.mt-3.mb-3
    = render 'layouts/notifications'
    .AccountPage__title.mt-3.mb-3
      %h1 Create Account
      %h5 新規アカウントの作成
      = render "devise/shared/links"
    .AccountPage__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .FormField.mt-3.mb-3
          .FormField__label--normal
            = f.label :name
          .FormField__input--normal
            = f.text_field :name, autofocus: true
        .FormField.mt-3.mb-3
          .FormField__label--normal
            = f.label :nickname
          .FormField__input--normal
            = f.text_field :nickname, autofocus: true
        .FormField.mt-3.mb-3
          .FormField__label--normal
            = f.label :email
          .FormField__input--normal
            = f.email_field :email
        .FormField.mt-3.mb-3
          .FormField__label--normal
            = f.label :password
            %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off"
        
        .FormField.mt-3.mb-3
          .FormField__label--normal
            = f.label :password_confirmation
          .FormField__input--normal
            = f.password_field :password_confirmation, autocomplete: "off"
        = f.check_box :agreement, :as => :boolean, checked:false
        -# #マージしたらこちらの変化を取り込みます。
        -# = link_to rule_users_path, style:"text-decoration:none" do
        -#   利用規約
        -# と
        -# = link_to privacy_users_path, style:"text-decoration:none" do
        -#   プライバシーポリシー
        -# に同意する

        .actions.mt-3
          = f.submit "Create Account", class: 'Button UserButton'

