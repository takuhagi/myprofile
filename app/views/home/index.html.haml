        - @rank_profiles.each do |profile|
          = link_to users_path(id: profile.user.id) do
            .ranking.card.commonButton
              - if profile.avatar.present?
                = image_tag(profile.avatar.url, alt: "", class: "rounded-circle minisize-icon")
              - else
                = image_tag('no_image.png', class: "rounded-circle minisize-icon")
              .name
