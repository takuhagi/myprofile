.select_users.mt-5.container-fuild
  = form_with model: @profile, url: profile_check_path, method: "patch", class: "select_user",local: true do |f|
    
    .boxes.d-flex.top_candidate.row
      - @profile.each do |profile|
        .profile_name.m-3
          = f.check_box :top_ids, {multiple: true, class: "top"}, profile[:id]
          = image_tag(profile.avatar.url, alt: "", class: "rounded-circle minisize-icon")
          = profile.user.nickname
      %ul#top_list

    .boxes.d-flex.middle_candidate.row
      - @profile.each do |profile|
        .profile_name.m-3
          = f.check_box :middle_ids, {multiple: true, class: "middle"}, profile[:id]
          = image_tag(profile.avatar.url, alt: "", class: "rounded-circle minisize-icon")
          = profile.user.nickname
      %ul#middle_list
      
    .boxes.d-flex.bottom_candidate.row
      - @profile.each do |profile|
        .profile_name.m-3
          = f.check_box :bottom_ids, {multiple: true, class: "bottom"}, profile[:id]
          = image_tag(profile.avatar.url, alt: "", class: "rounded-circle minisize-icon")
          = profile.user.nickname
      %ul#bottom_list

    
    .btn_all.m-3.pt-3.pb-3
      = f.submit "公開" 
        


