-#   ユーザー表示、リンクテスト 仮置き
- @user.each do |user|   
  - if user.profile.present?
    = link_to users_path(id: user.id) do
      = user.nickname

-# ログイン中のユーザーのプロフィールがない場合は登録画面へ、プロフィールのuser_idがログイン中のユーザーのidと一致する場合は編集画面へ
- if current_user.profile.nil?
  = link_to "プロフィール登録", new_profile_path
- elsif current_user.profile.user_id == current_user.id
  = link_to "プロフィール編集", edit_profile_path(current_user.profile.id)

-# 検索画面へのリンク
= link_to "ユーザー検索",search_users_path

= link_to "ログアウト",destroy_user_session_path, method: :delete #ログアウト 仮置き
- if current_user.profile.present?  #ログインユーザーがプロフページを持っているか(有料会員か？)
  = link_to "マイページ",users_path(id: current_user.id)  #マイページへのリンク 仮置き
.TopPage
  .TopPage--container.row
    .TopPage--container__left.col-lg-8.col-md-12
      .wrap-content.row
        - @profiles.first(1).each do |profile|
          .large-content.col-lg-12.col-md-12.col-sm-12.col-xs-12
            = image_tag profile.image.url, class: 'large-photo'
            .large-text
              = profile.catch_copy

      .wrap-content.row
        - @profiles.first(6).each do |profile|
          .middle-content.col-lg-4.col-md-4.col-xs-6
            = image_tag profile.image.url, class: 'middle-photo'
            .middle-text
              = profile.catch_copy

      .wrap-content.row
        - @profiles.first(8).each do |profile|
          .small-content.col-lg-3.col-md-3.col-xs-4
            = image_tag profile.image.url, class: 'small-photo'
            .small-text
              = profile.catch_copy

    .TopPage--container__right.col-lg-4.col-md-12
      .promotions
        .promotion
          PR画像
        .promotion
          PR画像
      .rankings
        .h4 アクセスランキング
        -# 5つ表示
        - @rank_profiles.each do |profile|
          .ranking
            = profile.user.nickname
      .new-arrivals
        .h4 新着 
        - @new_profiles.each do |new_profile|
          .new-arrival
            = new_profile.user.nickname
        